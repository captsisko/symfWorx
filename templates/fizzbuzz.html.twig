{% extends 'base.html.twig' %}

{% block title %} FizzBuZZzzzz... {% endblock %}

{% block body %}
    <ul class="list-group">
        {% for i in 1..20 %}
            <li class="list-group-item">
                {% if (i % 3 == 0) and (i % 5 == 0) %}
                    FizzBuzz
                {% elseif i % 5 == 0 %}
                    Buzz
                {% elseif i % 3 == 0 %}
                    Fizz
                {% else %}
                    {{ i }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}